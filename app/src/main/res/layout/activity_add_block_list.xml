<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_block_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffb9b9"
    tools:context="com.example.shubhamchandrakar.callblocker.AddBlockList">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/listview1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/search_editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Number or Search From Contact" />

    <Button
        android:text="Add to block list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btnnnstle"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/add_button"
        android:layout_below="@+id/search_editText"
        android:layout_alignParentStart="true" />
</RelativeLayout>
